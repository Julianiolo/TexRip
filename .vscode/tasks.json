{
    "tasks": [
        {
            "label": "make build Debug",
            "type": "shell",
            "command": "mingw32-make BUILD_MODE=DEBUG",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make build Release",
            "type": "shell",
            "command": "mingw32-make BUILD_MODE=RELEASE",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}